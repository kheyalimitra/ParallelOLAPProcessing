<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/CatalogName"
        android:layout_marginTop="30dp"
        />
    <TextView

        android:textSize="14sp"
        android:id="@+id/ServerName"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Name: Webolap.cmpt.sfu.ca"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginTop="10dp"/>
    <TextView

        android:textSize="14sp"
        android:id="@+id/CatalogName"
        android:layout_below="@+id/ServerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catalog: Adventure Works DW 2008R2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginTop="10dp" />
    <TextView

        android:textSize="14sp"
        android:id="@+id/cubeName"
        android:layout_below="@+id/CatalogName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cube: Adventure Works"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginTop="10dp" />


</RelativeLayout>